<!-- SettingsThemePicker For App -->
<resources>

    <!-- Red Theme -->
    <style name="RedTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <!-- Main App Color -->
        <item name="colorPrimary">@color/red</item>

        <!-- Dark App Color -->
        <item name="colorPrimaryDark">@color/darkRed</item>

        <!-- Accent App Color -->
        <item name="colorAccent">@color/darkRed</item>

        <!-- Theme UI Controls For Android Widget Pressed Color -->
        <item name="colorControlActivated">@color/darkRed</item>

        <!-- Theme UI Controls For Android Highlighted Text -->
        <item name="colorControlHighlight">@color/darkRed</item>

        <!-- Text Color -->
        <item name="android:textColorPrimary">@color/darkRed</item>

        <!-- Material Dialog Background Color -->
        <item name="md_background_color">@color/white</item>

        <!-- Material Dialog Title Color -->
        <item name="md_title_color">@color/darkRed</item>

        <!-- Material Dialog Content Color -->
        <item name="md_content_color">@color/black</item>

        <!-- this makes sure the action mode is painted over not above the action bar -->
        <item name="windowActionModeOverlay">true</item>

    </style>

