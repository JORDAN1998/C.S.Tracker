<?xml version="1.0" encoding="utf-8"?>

<!-- UI For Activity UsersView -->
<android.support.v7.widget.CardView
    android:id="@+id/cardView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="20dp" >

    <!-- Secondary UI For Activity UsersView -->
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/add_ui"
        android:padding="16dip"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".UsersAdd">

    <!-- CircleImageView circleImage -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImage"
        android:src="@drawable/darkred"
        android:onClick="onClickCircleImage"
        android:layout_width="70dip"
        android:layout_height="70dip"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/transparent"/>

    <!-- TextView nameLetter -->
    <TextView
        android:id="@+id/nameLetter"
        android:text="@string/name_letter"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/circleImage"
        android:layout_alignEnd="@+id/circleImage"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/circleImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- MaterialEditText UsersAddName -->
    <TextView
        android:id="@+id/usersAddName"
        android:hint="@string/user_name"
        android:textSize="14sp"
        android:layout_alignBaseline="@+id/nameLetter"
        android:layout_alignBottom="@+id/nameLetter"
        android:layout_toRightOf="@+id/circleImage"
        android:layout_toEndOf="@+id/circleImage"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- MaterialEditText UsersAddAge -->
    <TextView
        android:id="@+id/usersAddAge"
        android:hint="@string/age"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/circleImage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/circleImage"
        android:layout_alignEnd="@+id/circleImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- MaterialEditText UsersAddOrganization -->
    <TextView
        android:id="@+id/usersAddOrganization"
        android:hint="@string/organization"
        android:textSize="14sp"
        android:layout_marginLeft="10dip"
        android:layout_marginStart="10dip"
        android:layout_alignBaseline="@+id/usersAddAge"
        android:layout_alignBottom="@+id/usersAddAge"
        android:layout_toRightOf="@+id/usersAddAge"
        android:layout_toEndOf="@+id/usersAddAge"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>

</android.support.v7.widget.CardView>