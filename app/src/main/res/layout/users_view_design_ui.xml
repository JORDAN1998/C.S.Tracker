<?xml version="1.0" encoding="utf-8"?>

<!-- Fist UI For Activity UsersView -->
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/transparent"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="9dp" >

    <!-- Second UI For Activity UsersView -->
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="0dp" >

        <!-- Third UI For Activity UsersView -->
        <RelativeLayout
            android:padding="16dip"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- CircleImageView circleImage -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/usersViewCircleImage"
                android:src="@drawable/white"
                android:layout_width="70dip"
                android:layout_height="70dip"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/transparent"/>

            <!-- TextView usersViewNameLetter -->
            <TextView
                android:id="@+id/usersViewNameLetter"
                android:text="@string/name_letter"
                android:textColor="@color/red"
                android:textSize="40sp"
                android:gravity="center"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/usersViewCircleImage"
                android:layout_alignEnd="@+id/usersViewCircleImage"
                android:layout_alignParentTop="true"
                android:layout_alignBottom="@+id/usersViewCircleImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!-- MaterialEditText usersViewName -->
            <TextView
                android:id="@+id/usersViewName"
                android:hint="@string/user_name"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="26dp"
                android:layout_alignLeft="@+id/usersViewOrganization"
                android:layout_alignStart="@+id/usersViewOrganization" />

            <!-- MaterialEditText usersViewAge -->
            <TextView
                android:id="@+id/usersViewAge"
                android:hint="@string/age"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_marginTop="25dp"
                android:layout_below="@+id/usersViewCircleImage"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/usersViewCircleImage"
                android:layout_alignEnd="@+id/usersViewCircleImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- MaterialEditText usersViewOrganization -->
            <TextView
                android:id="@+id/usersViewOrganization"
                android:hint="@string/organization"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_marginLeft="10dip"
                android:layout_marginStart="10dip"
                android:layout_alignBaseline="@+id/usersViewAge"
                android:layout_alignBottom="@+id/usersViewAge"
                android:layout_toRightOf="@+id/usersViewAge"
                android:layout_toEndOf="@+id/usersViewAge"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</android.support.v7.widget.CardView>

