<?xml version="1.0" encoding="utf-8"?>

<!-- UI For UsersAdd Activity -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_ui"
    android:padding="16dip"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".UsersAdd">

    <!-- ImageView circleImage -->
    <ImageView
        android:id="@+id/circleImage"
        android:contentDescription="@string/activity_users_add"
        android:layout_width="70dip"
        android:layout_height="70dip"
        app:srcCompat="@drawable/bg_circle_today"/>

    <!-- TextView nameLetter -->
    <TextView
        android:id="@+id/nameLetter"
        android:text="@string/name_letter"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/circleImage"
        android:layout_alignEnd="@+id/circleImage"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/circleImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- MaterialEditText UsersAddName -->
    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/usersAddName"
        android:hint="@string/user_name"
        android:textSize="14sp"
        android:layout_alignBaseline="@+id/nameLetter"
        android:layout_alignBottom="@+id/nameLetter"
        android:layout_toRightOf="@+id/circleImage"
        android:layout_toEndOf="@+id/circleImage"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:met_maxCharacters="30"
        app:met_baseColor="@color/darkRed"
        app:met_primaryColor="@color/darkRed"
        app:met_floatingLabel="highlight"
        app:met_singleLineEllipsis="true"/>

    <!-- MaterialEditText UsersAddAge -->
    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/usersAddAge"
        android:hint="@string/age"
        android:textSize="14sp"
        android:inputType="number"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/circleImage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/circleImage"
        android:layout_alignEnd="@+id/circleImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:met_baseColor="@color/darkRed"
        app:met_primaryColor="@color/darkRed"
        app:met_floatingLabel="highlight" />

    <!-- MaterialEditText UsersAddOrganization -->
    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/usersAddOrganization"
        android:hint="@string/organization"
        android:textSize="14sp"
        android:layout_marginLeft="10dip"
        android:layout_marginStart="10dip"
        android:layout_alignBaseline="@+id/usersAddAge"
        android:layout_alignBottom="@+id/usersAddAge"
        android:layout_toRightOf="@+id/usersAddAge"
        android:layout_toEndOf="@+id/usersAddAge"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:met_maxCharacters="30"
        app:met_baseColor="@color/darkRed"
        app:met_primaryColor="@color/darkRed"
        app:met_floatingLabel="highlight"
        app:met_singleLineEllipsis="true"/>

</RelativeLayout>
