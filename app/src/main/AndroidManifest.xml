<?xml version="1.0" encoding="utf-8"?><!-- Log Of All Activities, Broadcasts, And Permissions, Used By The App -->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jordanzimmittidevelopers.com.communityservicelogger">

    <!-- Allows App To Write To External Storage For Backup, Restore, And Print Features -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- Allows App To Get Users Location -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!-- Allows App To Vibrate -->
    <uses-permission android:name="android.permission.VIBRATE" />

    <!-- Allows App To Add App Shortcut To Launcher -->
    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT" />

    <!-- Basic Application Information -->
    <application
        android:allowBackup="true"
        android:fullBackupContent="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/RedTheme">

        <!-- Activity UsersView -->
        <activity
            android:name=".UsersView"
            android:label="@string/activity_users_view" />

        <!-- Activity UsersAdd -->
        <activity
            android:name=".UsersAdd"
            android:label="@string/activity_users_add" />

        <!-- Activity UsersEdit -->
        <activity
            android:name=".UsersEdit"
            android:label="@string/activity_users_edit" />

        <!-- Activity EventsView -->
        <activity android:name=".EventsView" />

        <!-- Activity EventsAdd -->
        <activity
            android:name=".EventsAdd"
            android:label="@string/activity_events_add" />

        <!-- Activity EventsExtraInformation -->
        <activity
            android:name=".EventsExtraInformation"
            android:label="@string/activity_events_extra_information" />

        <!-- Activity EventsEdit -->
        <activity
            android:name=".EventsEdit"
            android:label="@string/activity_events_edit" />

        <!-- Activity Settings -->
        <activity
            android:name=".Settings"
            android:label="@string/activity_settings" />

        <!-- Activity SettingsThemePicker -->
        <activity
            android:name=".SettingsThemePicker"
            android:label="@string/activity_theme_picker" />

        <!-- Activity DefaultActivity -->
        <activity
            android:name=".DefaultActivity"
            android:label="@string/app_name">

            <!-- Tell The App To DefaultActivity Activity At Start -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Activity DefaultUser -->
        <activity
            android:name=".DefaultUser"
            android:label="@string/activity_default_user" />

        <!-- Activity SettingsAbout -->
        <activity
            android:name=".SettingsAbout"
            android:label="@string/activity_settings_about" />

        <!-- Activity RemindersView -->
        <activity
            android:name=".RemindersView"
            android:label="@string/activity_reminders_view" />

        <!-- Activity RemindersAdd -->
        <activity
            android:name=".RemindersAdd"
            android:label="@string/activity_reminders_add" />
        <activity android:name=".RemindersEdit"></activity>
    </application>

</manifest>