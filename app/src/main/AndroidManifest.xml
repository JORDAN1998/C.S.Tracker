<?xml version="1.0" encoding="utf-8"?><!-- Log Of All Activities, Broadcasts, And Permissions, Used By The App -->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jordanzimmittidevelopers.com.communityservicelogger">

    <!-- Allows App To Write To External Storage For Backup, Restore, And Print Features -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- Allows App To Get Users Location -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!-- Allows App To Vibrate -->
    <uses-permission android:name="android.permission.VIBRATE" />

    <!-- Allows App To Add App Shortcut To Launcher -->
    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT" />

    <!-- Basic Application Information -->
    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/RedTheme">

        <!-- Activity UsersView -->
        <activity
            android:name=".UsersView">


        </activity>

        <!-- Activity UsersAdd -->
        <activity
            android:name=".UsersAdd"
            android:label="@string/activity_users_add" />

        <!-- Activity UsersEdit -->
        <activity
            android:name=".UsersEdit"
            android:label="@string/activity_users_edit" />

        <!-- Activity EventsView -->
        <activity
            android:name=".EventsView" />

        <!-- Activity EventsAdd -->
        <activity
            android:name=".EventsAdd"
            android:label="@string/activity_events_add" />

        <!-- Activity EventsExtraInformation -->
        <activity
            android:name=".EventsExtraInformation"
            android:label="@string/activity_events_extra_information" />

        <!-- Activity EventsEdit -->
        <activity
            android:name=".EventsEdit"
            android:label="@string/activity_events_edit" />

        <!-- Activity Settings -->
        <activity
            android:name=".Settings"
            android:label="@string/activity_settings" />

        <!-- Activity ThemePicker -->
        <activity
            android:name=".ThemePicker"
            android:label="@string/activity_theme_picker"/>

        <!-- Activity ThemePicker -->
        <activity
            android:name=".Launch"
            android:label="@string/activity_theme_picker">
            <!-- Tell The App To Launch Activity At Start -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>